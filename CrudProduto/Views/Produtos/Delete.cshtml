@model CrudProduto.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Exclusão de Produto</h1>

<h4>Tem certeza que deseja excluir este produto?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoriaNavigation.Categoria)
        </dd>
        <dt class = "col-sm-2">
            Fornecedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFornecedorNavigation.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
