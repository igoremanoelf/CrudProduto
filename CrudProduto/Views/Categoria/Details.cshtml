@model CrudProduto.Models.Categorium

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Categorias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdCategoria">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
